% Title
\newcommand{\documentTitle}[3]{ % Added a third argument for designation
  \begin{flushleft} % Align content to the left
    {\Huge\color{accentTitle} #1} \\ % Name in large accent color
    \vspace{5pt} % Space below the name
    {\large\color{accentText} #2} \\ % Designation passed as argument in accent text color
    \vspace{5pt} % Small space before the contact information
    {\footnotesize #3} % Display contact info in footnotesize
    \vspace{10pt} % Additional space after contact information
  \end{flushleft}
}

% Create a footer with correct padding
\newcommand{\documentFooter}[1]{
  \setlength{\footskip}{10.25pt}
  \fancyfoot[C]{\footnotesize #1}
}

% Simple wrapper to set up page numbering
\newcommand{\numberedPages}{
  \documentFooter{\thepage/\pageref{LastPage}}
}

% Section heading with horizontal rule
\titleformat{\section}{
  \vspace{-5pt}
  \color{accentText}
  \raggedright\large\bfseries
}{}{0em}{}[\color{accentLine}\titlerule]

% Section heading with separator and content on same line
\newcommand{\tinysection}[1]{
  \phantomsection
  \addcontentsline{toc}{section}{#1}
  {\large{\bfseries\color{accentText}#1} {\color{accentLine} |}}
}

% Indented line with arguments left/right aligned in document
\newcommand{\heading}[2]{
  \hspace{10pt}#1\hfill#2\\
}
% Adds \textbf to \heading and formats the CGPA and Coursework
\newcommand{\headingBf}[2]{
  \heading{\textbf{#1}}{\textbf{#2}}
}
% Adds \textit to \heading and formats the CGPA
\newcommand{\headingIt}[2]{
  \heading{\textit{#1}}{\textit{#2}}
}
% New command to format relevant coursework
\newcommand{\coursework}[1]{\textbf{Relevant Coursework:} \textit{#1}}


